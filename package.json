        "electron-installer-windows": "^1.1.0",
        "electron-packager": "^12.1.1",
        "electron-winstaller": "^2.6.4"
    },
    "dependencies": {
        "electron-compile": "^6.4.3",
        "electron-prebuilt-compile": "^2.0.3",
        "electron-reload": "^1.2.5",
        "nedb": "^1.8.0"
    }
