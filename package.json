    "description": "prison management system for computer science project",
    "main": "./src/main/index.js",
    "productName": "Prison Management System",
    "scripts": {
        "start": "export NODE_ENV=development ; electron .",
        "package::linux": "export NODE_ENV=production ; ./node_modules/.bin/electron-packager . --overwrite --platform=linux --icon src/main/images/logo.png --executable-name prms --asar --out dist",
        "package::window": "export NODE_ENV=production ; sudo ./node_modules/.bin/electron-packager . --overwrite --platform=win32 --arch=ia32 --version-string.ProductName 'Prison Management System' --executable-name prms --icon=src/main/images/logo.ico --asar --out dist",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
