doctype html

extends ./_template.jade

block title
  title Prison Mangement System

block content
  include ./_HeaderButton.jade
  div.prison-functions

    ul(data-sect="prisoner" class="prison-func")

      li(data-execute="addPrisoner" class="prison-func-item")
        p Add Prisoner
      li(data-execute="viewPrisoner" class="prison-func-item")
        p View Prisoner
      li(data-execute="deletePrisoner" class="prison-func-item")
        p Delete Prisoner

    ul(data-sect="warder", class="prison-func")

      li(data-execute="addWarder" class="prison-func-item")
        p Add Warder
      li(class="prison-func-item")
        p View Warder
      li(class="prison-func-item")
        p Delete Warder

    ul(data-sect="visitor" class="prison-func")

      li(class="prison-func-item")
        p Add Visitor
      li(class="prison-func-item")
        p View Visitor
      li(class="prison-func-item")
        p Delete Visitor
  script(src="../js/functions.js")